
{
  "app": "npx ts-node --prefer-ts-exts bin/cicdpipeline.ts",
  "watch": {
    "include": ["**"],
    "exclude": [
      "README.md",
      "cdk*.json",
      "**/*.d.ts",
      "**/*.js",
      "tsconfig.json",
      "package*.json",
      "yarn.lock",
      "node_modules",
      "test"
    ]
  },
  "context": {
    "@aws-cdk/core:newStyleStackSynthesis": true,
    "@aws-cdk/aws-codepipeline:defaultPipelineTypeToV2": true,
    "aws-cdk:enableDiffNoFail": true
  }
}
